<div class="panel panel-default">
    <div class="panel-heading"><strong>Upload Files</strong> <small>Bootstrap files upload</small></div>
    <div class="panel-body">
        <!-- Standar Form -->
        <h4>Select files from your computer</h4>
        <form>
            <div class="form-inline">
                <div class="form-group">
                    {{y-file-input fileDataValue=fileData}}
                </div>
                <!-- <button type="submit" class="btn btn-sm btn-primary" {{action 'getFile'}}>Upload files</button> -->
            </div>
        </form>
    </div>
    <h4>Or drag and drop files below</h4>
  <!--   <div class="upload-drop-zone" >
     Just drag and drop files here
  </div> -->
    {{#drop-target fileDataValue=fileData}}
        Just drag and drop files here
    {{/drop-target}}
</div>



{{#if fileData}}
<div class="panel panel-default">
    <div class="panel-heading"><strong>Header</strong></div>
    <div class="panel-body">
            {{#each dataHeader as |columnHeader|}}
                <div class="data-header">
                    <span>
                       {{columnHeader}}
                    </span>
                </div>
            {{/each}}
    </div>
</div>
{{/if}}




